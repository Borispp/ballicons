.header-main
  width 100%
  height 60px
  position relative
  z-index 3
  padding 12px 70px
  box-sizing border-box
  background rgba(255, 255, 255, 0.9)

  clearfix()

  .site-logo
    float left
    margin-top -4px

  .site-menu
    float right

.site-logo
  display inline-block
  sprite($s-logo)

  &.big
    sprite($s-logo-big)

.site-menu
  li
    display inline-block

    &:last-child
      a
        padding-right 0

    a
      font-family 'PT Sans'
      font-size 16px
      color #000
      letter-spacing 0
      text-decoration none
      padding 3px 16px

      &:hover
        color $orange

    .tobaco-link
      font-weight bold
      color $orange

      &:hover
        color #000

.tobaco-link
  display inline-block
  vertical-align middle

  &:before
    content ''
    display inline-block
    sprite($s-tobaco)
    vertical-align middle

  span
    display inline-block
    vertical-align middle
    padding-left 12px

@media (max-width 1240px)
  .header-main
    padding 12px 30px
