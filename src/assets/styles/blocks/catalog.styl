.catalog
  padding 80px 0
  background #fff

  .headline
    font-family 'PT Sans'
    font-size 50px
    font-weight bold
    color #000
    line-height 44px
    text-align center

  .description
    font-family 'PT Sans'
    font-size 28px
    color $orange
    text-align center

  .more
    margin-top 18px
    text-align center

.catalog-list
  font-size 0
  margin 12px -10px 0

  li
    display inline-block
    width calc(25% - 20px)
    margin 10px
    box-sizing border-box
    padding 40px 0 32px
    text-align center
    border-radius 5px
    background #fff
    box-shadow 0 4px 10px rgba(0,0,0,0.15)
    position relative
    transition all .2s

    &:hover
      box-shadow 0 10px 40px rgba(0,0,0,0.2)
      transform translate(0, -5px)

    a
      position absolute
      z-index 2
      top 0
      left 0
      width 100%
      height 100%

    h2
      margin 30px 0 0
      display inline-block
      font-size 22px
      font-weight 600
      border-bottom 1px solid $orange

    .image
      height 160px
      overflow hidden
      position relative

      img
        max-width 194px
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)

.catalog-block
  padding 20px 0

  .pager-bottom
    margin 36px 0 54px
    text-align center

.breadcrumbs
  li
    display inline-block

    &:after
      content ''
      display inline-block
      margin 0 8px 0 12px
      vertical-align middle
      sprite($s-arrow2)

    &:last-child
      &:after
        display none

    a
      color #565656
      text-decoration none

      &.active
        opacity .7

      &:hover
        opacity 1

.sort
  font-size 14px
  color #565656
  margin 64px 0 30px
  clearfix()

  .sortby
    float left

    p
      padding-bottom 12px

  .pager
    float right
    padding-top 38px
