.advantages
  background url('../images/content/bg.jpg')
  background-attachment fixed
  background-size cover
  padding 76px 0 50px
  color #fff

  .headline
    font-family 'PT Sans'
    font-size 50px
    font-weight bold
    color #FFF
    line-height 48px
    text-align center

  .description
    font-family 'PT Sans'
    font-size 28px
    color $orange
    text-align center

  .advantages-list
    margin 24px 0
    font-size 0

    li
      display inline-block
      width 33.33%
      font-size 16px
      text-align center
      padding 0 10px
      box-sizing border-box

      h3
        font-size 24px
        line-height 36px
        color #FFF
        letter-spacing 1px
        font-weight 600

      p
        font-size 15px
        line-height 24px

    .icon
      text-align center
      height 90px

    .quality,
    .guarantee,
    .feedback
      display inline-block

    .quality
      sprite($s-quality)

    .guarantee
      sprite($s-guarantee)

    .feedback
      sprite($s-feedback)
