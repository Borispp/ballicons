.product
  padding-top 70px
  padding-bottom 40px

  .base-col
    clearfix()

  .image
    float left
    width 470px
    img
      width 100%

  .content
    width 570px
    float right
    font-size 16px
    line-height 25px

    .headline
      font-family 'PT Sans'
      font-size 50px
      line-height 70px
      font-weight bold
      border-bottom 1px solid $orange
      margin-bottom 18px

    .characteristics
      width 400px
      padding-top 18px
      font-size 0

      .item
        display inline-block
        font-size 16px
        width 50%
        padding-bottom 12px
        vertical-align top

        .type
          font-size 16px
          padding-bottom 6px
          font-weight 600

        .description
          font-family 'PT Sans'
          font-size 28px
          color $orange

.hot
  display inline-block
  margin-right 5px
  sprite($s-hot)

.recomended
  padding 0 0 70px 0

  h2.headline
    font-size 24px
    line-height 60px
    font-weight 600
    border-bottom 1px solid $orange
    margin-bottom 42px

  .bxslider > li
    padding-left 6px
    padding-bottom 20px
    text-align center

  .catalog-list
    margin-top 20px
    img
      display inline-block

.percent_line
  margin 0 auto
  background url('../images/content/percent_line.png')
  width 874px
  height 90px
  background-size 874px 90px
  font-size 0

  span
    display inline-block
    vertical-align middle
    width 33.33%
    font-size 16px
    font-weight 600
    text-align center
    padding-top 30px
