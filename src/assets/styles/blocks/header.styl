.announce
  background $yellow
  height 60px
  line-height 60px
  letter-spacing -.25px
  box-sizing border-box
  text-align center
  font-weight 300

  .emoji
    width 32px
    display inline-block
    vertical-align middle
    position relative
    top -3px
    margin-right 12px

.header
  position relative

  h1.headline
    font-size 200px
    line-height 200px
    margin-top 128px
    margin-bottom 60px
    color $violet
    font-family 'Helvetica Rounded'
    text-align center
    position relative

    &.-active
      .name:after
        opacity 1
        transform translate(0, 0)

    .name
      position relative
      display inline-block
      background url('../images/content/logo.png')
      width 871px
      height 150px
      background-size 871px 150px
      background-repeat no-repeat

      &:after
        content ''
        display block
        position absolute
        top -5px
        right 34px
        sprite($s-skate)
        opacity 0
        transform translate(-200px, 30px)
        transition all .25s
        transition-delay .25s

    span.count
      position absolute
      right -64px
      top -42px
      font-size 42px
      display block
      width 76px
      height 76px
      line-height 86px
      background $red
      color $white
      border-radius 50%

@media (max-width 1100px)
  .header
    h1.headline
      // font-size 190px
      margin-top 90px
      margin-bottom 40px

      .name
        background url('../images/content/logo.png')
        width 784px
        height 136px
        background-size 784px 136px

@media (max-width 1000px)
  .header
    h1.headline
      // font-size 140px

      margin-top 83px
      margin-bottom 63px

      .name
        width 610px
        height 105px
        background-size 610px 105px

      span.count
        width 52px
        height 52px
        right -44px
        top -26px
        font-size 29px
        line-height 60px

@media (max-width 720px)
  .announce
    height auto
    line-height 20px
    padding 20px 10px

    .emoji
      display none

  .header
    position relative

    h1.headline
      font-size 60px
      line-height 66px
      margin-top: 52px;
      margin-bottom: 18px;

      .name
        width 261px
        height 45px
        background-size 261px 45px

      .name:after
        transform scale(.32)
        top -30px
        right -28px

      span.count
        width 23px
        height 23px
        font-size 13px
        line-height 26px
        right -16px
        top -13px
