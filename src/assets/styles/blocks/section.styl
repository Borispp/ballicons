.header-description
  width 780px
  margin 0 auto
  clearfix()

  &.left-image
    padding-top 32px
    margin-bottom -38px

  &.right
    padding-left 68px

    .content
      width 400px
      padding-right 60px
      box-sizing border-box
      float left

    .description
      float right
      width 378px

  &.left

    .content
      width 430px
      padding-left 40px
      box-sizing border-box
      float right
      transform translate(60px, 0)

    .description,
    .image
      float left
      width 350px

    .image
      img
        width calc(100% + 100px)
        margin-left -86px
        margin-top -92px

    &.small
      padding-top 28px

      .description,
      .image
        width 360px

      .content
        width 420px
        padding-left 0
        transform translate(92px, 0)

      .image
        img
          width calc(100% + 26px)
          margin-left -18px
          margin-top -52px

  &.center
    position relative
    margin-top 32px
    padding-bottom 18px

    .content
      width 410px
      text-align center
      margin 0 auto
      transform translate(22px, 0)

    .img-left,
    .img-right
      position absolute
      width 260px
      top 4px

      img
        width 100%

    .img-left
      left -130px

    .img-right
      right -170px


  .content
    .supheadline
      color $violet
      font-size 20px
      line-height 40px
      margin-bottom 18px

    .headline
      font-family 'Helvetica Rounded'
      font-size 30px
      line-height 40px

      &.big
        font-size 50px
        padding-bottom 18px

    .subheadline
      font-size 21px
      letter-spacing -.25px
      font-family 'Helvetica Rounded'
      text-transform uppercase
      margin-bottom 14px

      .underline
        position relative
        display inline-block

        b
          position relative
          z-index 1

        &:before
          content ''
          display block
          position absolute
          z-index 0
          bottom 11px
          width 100%
          height 6px

        &.rose:before
          background $rose

        &.yellow:before
          background $yellow

        &.blue:before
          background $blue

  .text
    font-size 18px
    line-height 30px
    font-weight 300

    .presaved
      width 242px
      margin-top 20px

    .shield
      display inline-block
      width 149px
      margin-top 24px

    .btn
      margin-top 25px

  .format-list
    margin-top 3px
    margin-bottom 23px

    span
      display inline-block
      margin-right 5px
      padding 6px 12px
      width 54px
      height 31px
      box-sizing border-box
      border-radius 16px
      font-family 'Helvetica Rounded'
      font-size 12px
      line-height 22px
      color $white
      text-align center

      &.yellow
        background $yellow

      &.red
        background $red

      &.blue
        background $blue

      &.rose
        background $rose

      &.green
        background $green

.image-left
  position relative

  &:before
    content ''
    display block
    position absolute
    left 0
    top 0
    background url('../images/content/img.png')
    width 133px
    height 228px
    background-size 133px 228px
    background-position 0 30px


.icons-list
  position relative
  font-size 0
  width 100%
  max-width 860px
  padding-left 40px
  box-sizing border-box
  margin 110px auto 0

  li
    display inline-block
    width 20%
    box-sizing border-box
    padding 18px

    img
      width 100%

  .notice
    width auto
    position absolute
    top 0
    right -14px
    transform translate(100%, 0)
    font-family 'Passing Notes'
    font-size 18px
    color $grey

    &.left
      right auto
      left 10px
      transform translate(-100%, 0)

      &:before
        transform rotate(90deg)
        left auto
        right 0

    &.third
      top 278px

    &.fifth
      top 610px

    &.sixth
      top 768px

    &.seventh
      top 938px

    &:before
      content ''
      display block
      position absolute
      bottom -66px
      left 15px
      sprite($s-round)

.section
  padding-bottom 100px
