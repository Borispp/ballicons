.btn
  display inline-block
  font-size 18px
  letter-spacing .25px
  padding 15px 40px
  border-radius 30px
  text-decoration none
  position relative
  transition background .15s linear, color .15s linear

  &:active
    top 1px

  &.violet
    background $violet
    color $white

    &:hover
      background $violet-dark

    &:active
      background $violet-darker

  &.book
    &:before
      content ''
      display inline-block
      vertical-align middle
      sprite($s-book)
      transform translate(-12px, -1px)

  &.default
    font-size 18px
    font-weight 500
    padding 15px 32px

  &.white
    background $white

    &:hover
      background rgba(0,0,0,.15)
      color $white

    &:active
      background rgba(0,0,0,.3)
      color $white


.link
  color $violet
  text-decoration none
  transition color .2s

  &:hover
    color $red

@media (max-width 1000px)
  .btn
    padding 13px 24px 12px 32px
    font-size 16px

    &.book:before
      transform translate(-10px, -2px)
