.btn
  cursor pointer
  display inline-block
  border-radius 4px
  box-shadow 0 2px 2px rgba(0, 0, 0, .25);
  position relative
  top 0
  text-decoration none
  font-family 'Open Sans'
  font-size 16px
  font-weight 600
  color #fff
  height 50px
  line-height 50px
  padding 0 36px
  border none

  &:before
    content ''
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    background #000
    opacity 0
    transition opacity .2s

  &:hover
    &:before
      opacity .07

  &:active
    box-shadow inset 0 2px 4px rgba(0, 0, 0, .25);
    top 1px

  span
    display inline-block
    position relative
    z-index 1

  &.-orange
    background-image: -webkit-linear-gradient(#FBDA61 0%, #F76B1C 100%)
    background-image: -o-linear-gradient(#FBDA61 0%, #F76B1C 100%)
    background-image: linear-gradient(#FBDA61 0%, #F76B1C 100%)

.select
  select
    -webkit-appearance none
    -moz-appearance none
    appearance none
    font-size 16px
    font-weight 500
    background #fff
    background-image url('../images/content/arrow3.png')
    background-size 13px 7px
    background-repeat no-repeat
    background-position 90% 50%
    border none
    box-shadow 1px 1px 4px rgba(0,0,0,.13)
    width 200px
    height 50px
    box-sizing border-box
    padding 0 24px
    position relative

.pager

  span
    display inline-block
    vertical-align bottom
    font-size 18px
    letter-spacing 3px
    margin 0 6px

  a
    display inline-block
    position relative
    width 40px
    height 40px
    box-sizing border-box
    vertical-align top
    background #fff
    box-shadow 0 0 4px rgba(0,0,0,.13)
    margin 8px
    border-radius 3px
    transition box-shadow .2s
    text-align center
    line-height 40px
    text-decoration none
    font-size 16px
    color #2C2C2C

    &:hover
      box-shadow 0 0 6px rgba(0,0,0,.2)

    &:active
      box-shadow inset 0 0 2px rgba(0,0,0,.13)
      top 1px

    &.left
      &:before
        content ''
        display inline-block
        sprite($s-arrow3)
        position absolute
        top 50%
        left 50%
        transform translate(-50%,-50%) rotate(90deg)

    &.right
      &:before
        content ''
        display inline-block
        sprite($s-arrow3)
        position absolute
        top 50%
        left 50%
        transform translate(-50%,-50%) rotate(-90deg)

    &.active
      color #fff
      background-image: -webkit-linear-gradient(#FBDA61 0%, #F76B1C 100%)
      background-image: -o-linear-gradient(#FBDA61 0%, #F76B1C 100%)
      background-image: linear-gradient(#FBDA61 0%, #F76B1C 100%)
